注意上方和注释的区别
#include<iostream>
#include<string>//这个版本可以省略了

using namespace std;
	int main()
	{


		int a = 10;
		int b = 20;
		int c = 0;
		c=a < b ? a : b = 100;

		cout << c<<"\t"<<a<<"\t"<<b << endl;
	}





